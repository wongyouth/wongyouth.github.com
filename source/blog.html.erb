---
title: 文章
pageable: true
per_page: 10
layout: blog
change_frequency: daily
---

<% page_articles.each_with_index do |article, i| %>
  <article class="shadow">
    <h2><%= link_to article.title, article %> </h2>
    <%= partial 'partials/meta', :locals => {article: article} %>
    <%= article.summary %>

    <%= link_to 'Read more', article, class: 'more-link' %>
  </article>
<% end %>

<% if paginate && num_pages > 1 %>
  <ul class="pager">
    <li class="<%= 'disabled' unless prev_page %>">
      <%= link_to '&laquo;', prev_page %>
    </li>
    <%= link_to "#{page_number} / #{num_pages}", nil, class: 'btn disabled' %>
    <li class="<%= 'disabled' unless next_page %>">
      <%= link_to '&raquo;', next_page %>
    </li>
  </ul>
<% end %>
